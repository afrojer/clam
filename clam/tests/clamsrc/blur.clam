Image a = imgread(1);

Calc grey := #[ (3*Red + 6*Green + 1*Blue)/10 ]#;

Calc dummy := [1 / 1] { 1 };
Calc gauss := [1 / 159]
{
	2  4  5  4  2,
	4  9 12  9  4,
	5 12 15 12  5,
	4  9 12  9  4,
	2  4  5  4  2
};

a |= grey;
Kernel dogauss = @dummy | gauss;

Image outR = a:Red ** dogauss;
Image outG = a:Green ** dogauss;
Image outB = a:Blue ** dogauss;

Image out;
out:Red = outR:gauss;
out:Green = outG:gauss;
out:Blue = outB:gauss;

imgwrite( out, "png", 2);
